<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
    <link rel="stylesheet" type="text/css" href="/css/style.css" />
  </head>
  <body>
    Found <%= data.length %> results for <%= searchTerm %>
    <div class="images-container">
      <% let tags = [] %>
      <% let tagsCombined = [] %>
    <% for (let value of data) { %>
        <% let image = `${webSite}${value.directory}/${value.image}`; %>
        <div class="image-container">

          <a href="<%=`${image}` %>" name="selected">
          <img width="300px" src="<%= image%>">
          </a>
          <form action="/search/saved" method="POST">
            <input class="save" type="text" name="image" value="<%= image %>" />
            <input type="submit" value="save" />
          </form>
        </div>
        <% tags = value.tags.split(" ") %>
        <% for (let i = 0; i < tags.length; i++) { %>
          <% if(tagsCombined.indexOf(tags[i]) == -1){ %>
          <%  tagsCombined.push(tags[i]) %>
        <%   } %>
      <%  } %>
    <% } %>
  </div>
  <div class="tags">
    Current tags:
    <% for (let i = 0; i < tagsCombined.length; i++) { %>
      <%= tagsCombined[i]; %>
    <%} %>
  </div>
  <a href="/search/saved"<p>saved</p></a>
  </body>
</html>
